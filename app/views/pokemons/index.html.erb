<p id="notice"><%= notice %></p>

<div class='container'>
  <h1>The Weird Pokemons</h1>
  <div class="row">
    <% @pokemons.each do |pokemon| %>
    <div class="col-sm-3">
    <div class="thumbnail">
      <%= link_to image_tag(pokemon.image_url_small), pokemon %>
      <div class="caption">
        <h3><%= pokemon.name %></h3>
        <p><%= pokemon.desc %></p>
        <p><%= link_to 'Show', pokemon %> <%= link_to 'Edit', edit_pokemon_path(pokemon) %> <%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
    </div>
    <% end %>
  </div>

<div class="row">
<%= link_to 'New Pokemon', new_pokemon_path %>
</div>

</div>